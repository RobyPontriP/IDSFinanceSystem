            //table.ajax.url('@Url.Action("GetTransByAccount", "ChartOfAccount", new { Area = "GLTable" })?branchCode=' + $("#cboBranchCode").val() + '&period=202101&account=' + $("#lblSelAccount").val() + '').load();

