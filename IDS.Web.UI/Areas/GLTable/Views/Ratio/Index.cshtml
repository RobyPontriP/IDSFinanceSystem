        function LoadCreateNewForm() {
            modalProcess();
            $.ajax({
                type: "GET",
                url: '@Url.Action("Create", "Ratio", new { Area = "GLTable" })',
                contentType: 'application/html; charset=utf-8',
                dataType: 'html',
                success: function (result) {
                    $('#loadingModal').modal('hide');
                    $('#PartialSection').empty();
                    $("#PartialSection").html(result);
                    $("#modalTitle").html("Create Data");
                    $("#CreateEditForm").modal('show');
                },
                error: function (status) {
                    $('#loadingModal').modal('hide');
                    alert('');
                }
            });
        }

        function LoadEditForm() {
            var form = this;
            var selRow = table.rows('.selected').data();
            var data = null;

            if (selRow.length > 0) {
                data = selRow[0]["RatioCode"];

                modalProcess();
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("Edit", "Ratio", new { Area = "GLTable" })',
                    data: {
                        'finRatioCode': data
                    },
                    dataType: 'html',
                    success: function (result) {
                        $('#loadingModal').modal('hide');
                        $('#PartialSection').empty();
                        $("#PartialSection").html(result);
                        $("#modalTitle").html("Edit Data");
                        $("#RatioCode").attr('readonly', 'true');
                        $("#CreateEditForm").modal('show');
                    },
                    error: function (status) {
                        alert('');
                    }
                });
            }
            else {
                alert("Please select data to be edit");
            }
        }

        function Delete() {
            var form = this;
            var selRow = table.rows('.selected').data();

            if (selRow == null || selRow == 'undefined' || selRow.length == 0) {
                alert("Please select the data you want to delete");
                return false;
            }

            var dataCollection = '';
            var data = '';

            $.each(selRow, function (index, row) {
                data += row["RatioCode"] + ',';
                dataCollection += '[' + row["RatioCode"] + '] - ' + row["RatioName"] + "\n";
            })

            var answer = confirm("You are about to delete data:\n" + dataCollection + "\nAre you sure want to delete the data ?");

            if (answer) {
                if (dataCollection.length > 0) {
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("Delete", "Ratio", new { Area = "GLTable" })',
                        data: { "finRatiosCodeList": data },
                        dataType: 'JSON',
                        success: function (respond) {
                            switch (respond) {
                                case "NoAccess":
                                    window.location.href = '@Server.MapPath("~/Views/Shared/View403.cshtml")'
                                    break;
                                case "Success":
                                    LoadData();
                                    alert(respond);
                                    @*window.location.href = '@Url.Action("index", "Ratio", new { Area = "GLTable" })'*@
                                    break;
                                default:
                                    LoadData();
                                    alert(respond);
                                    @*window.location.href = '@Url.Action("index", "Ratio", new { Area = "GLTable" })'*@
                                    break;
                            }

                        },
                        error: function (respond) {
                            alert(respond);
                        }
                    })
                }
            }
            else {
                return false;
            }

        }
    </script>
