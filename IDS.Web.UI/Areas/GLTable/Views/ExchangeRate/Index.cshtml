                        }
                    })
                }
            }
            else {
                return false;
            }

        }

        function getyyyyMMdd(ticks) {
            var months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
            var date = new Date(ticks);
            date.toLocaleString()
            var mm = months[(date.getMonth())];
            var dd = date.getDate();
            var yyyy = date.getFullYear();
            if (mm < 10) mm = "0" + mm;
            if (dd < 10) dd = "0" + dd;

            return "" + dd + "/" + mm + "/" + yyyy.toString();
        }

