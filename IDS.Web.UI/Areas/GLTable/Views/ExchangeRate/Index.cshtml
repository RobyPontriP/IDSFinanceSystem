                                    alert(respond);
                                    @*window.location.href = '@Url.Action("index", "ExchangeRate", new { Area = "GLTable" })'*@
                                    break;
                                default:
                                    LoadData();
                                    alert(respond);
                                    @*window.location.href = '@Url.Action("index", "ExchangeRate", new { Area = "GLTable" })'*@
