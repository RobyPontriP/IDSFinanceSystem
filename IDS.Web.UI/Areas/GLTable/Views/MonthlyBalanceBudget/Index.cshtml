        $('#cboBranchIndex').change(function () {
            cboBranch = $(this).val();
            LoadData(PeriodValue, cboBranch);
        });

        $('#PeriodIndex').change(function () {
            PeriodValue = $(this).val();
            LoadData(PeriodValue, cboBranch);
        });

        function Refresh() {
            LoadData($("#PeriodIndex").val(), $("#cboBranchIndex").val());
        }

