        function CalcDueDate() {
            var docdate = $("#DocDate").val().replace(/\//g, "-");
            docdate = docdate.split("-");

            var months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
            for (var j = 0; j < months.length; j++) {
                if (docdate[1] == months[j]) {
                    docdate[1] = months.indexOf(months[j]) + 1;
                }
            }
            if (docdate[1] < 10) {
                docdate[1] = '0' + docdate[1];
            }
            const newdocdate = new Date(docdate[2] + '-' + docdate[1] + '-' + docdate[0]);
            
            newdocdate.setDate(newdocdate.getDate() + parseInt($("#PaymentTerm").val()));
            $('#DueDate').val(("0" + newdocdate.getDate()).slice(-2) + "/" + months[newdocdate.getMonth()] + "/" + newdocdate.getFullYear());
        }

