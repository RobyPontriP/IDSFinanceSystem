@section Scripts {
    <script type="text/javascript" src="~/Scripts/jquery.validate.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript" src="~/Content/Select2/js/select2.full.min.js"></script>
    <script src="~/Content/flatpickr/flatpickr.min.js"></script>
    <script src="~/Content/flatpickr/id.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script type="text/javascript" src="~/Scripts/GeneralScript.js"></script>

    <script type="text/javascript">
        $('form#formCreateEdit').removeData("validator");
        $('form#formCreateEdit').removeData("unobtrusiveValidation");
        $.validator.unobtrusive.parse($('form#formCreateEdit'));

        $(document).ready(function () {
            $(".select2DDList").select2();

            flatpickr("#ReceivedDate", {
                shorthand: true,
                dateFormat: "d/M/Y",
                altFormat: "F Y",
                defaultDate: ["today"],
                static: true,
            });

            flatpickr("#DocDate", {
                shorthand: true,
                dateFormat: "d/M/Y",
                altFormat: "F Y",
                defaultDate: ["today"],
                static: true,
            });

            flatpickr("#DueDate", {
                shorthand: true,
                dateFormat: "d/M/Y",
                altFormat: "F Y",
                defaultDate: ["today"],
                static: true,
            });

            if ($('#FormAction').val() == 2) {
                $('#DocNo,#ReceivedDate,#cboCustH,#cboBranch,#DocDate,#cboRelatedInv,#cboAcc,#cboCcy,#Amount,#PaymentTerm,#Remark').prop('disabled', true);
                $('#DocDate').val($('#docDate').val());
                $('#ReceivedDate').val($('#rcvDate').val());

                $('#Amount').val($('#Amount').val().toString()
                      .replace(/[^\d.]/g, "")
                      .replace(/^(\d*\.)(.*)\.(.*)$/, '$1$2$3')
                      .replace(/\.(\d{2})\d+/, '.$1')
                      .replace(/\B(?=(\d{3})+(?!\d))/g, ","));

                $('#EquivAmt').val($('#EquivAmt').val().toString()
                      .replace(/[^\d.]/g, "")
                      .replace(/^(\d*\.)(.*)\.(.*)$/, '$1$2$3')
                      .replace(/\.(\d{2})\d+/, '.$1')
                      .replace(/\B(?=(\d{3})+(?!\d))/g, ","));

                $('#Outstanding').val($('#Outstanding').val().toString()
                      .replace(/[^\d.]/g, "")
                      .replace(/^(\d*\.)(.*)\.(.*)$/, '$1$2$3')
                      .replace(/\.(\d{2})\d+/, '.$1')
                      .replace(/\B(?=(\d{3})+(?!\d))/g, ","));

                //CalculateDifference();
            }

            $('#cboCustH').change(function () {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("GetCustAccForDataSource", "Customer", new { Area = "GeneralTable" })',
                    dataType: 'json',
                    data: { custCode: $('#cboCustH').val() },
                    success: function (respond) {
                        $('#cboAcc').empty();
                        $.each(respond, function (i, item) {
                            $('#cboAcc').append('<option value = "' + item.Value + '">' + item.Text + '</option>');
                        });
                    }
                });
            });

            $('#cboCcy').change(function () {
                if ($('#cboCcy').val() == 'IDR') {
                    $('#ExchangeRate').val(1);
                    CalcEqvHeader();
                    CalculateDifference();
                }
                else {
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("GetMidRate", "ExchangeRate", new { Area = "GLTable" })',
                        dataType: 'json',
                        data: { ccy1: $('#cboCcy').val(), ccy2: 'IDR' },
                        success: function (respond) {
                            $('#ExchangeRate').val(respond);
                            CalcEqvHeader();
                            CalculateDifference();
                        }
                    });
                }


            });

            $('#Amount').change(function () {
                CalcEqvHeader();
                CalculateDifference();
            });

            $('#EquivAmt').change(function () {
                CalcEqvHeader();
            });

            $('#PaymentTerm').change(function () {
                CalcDueDate();
            });

            $('#DocDate').change(function () {
                CalcDueDate();
            });

            function CalcEqvHeader() {
                //var EqvAmt = parseFloat($('#Amount').val().replace(/,/g, '')) * $('#ExchangeRate').val();
                var EqvAmt = parseFloat(RemoveAllComma($('#Amount').val())) * $('#ExchangeRate').val();
                EqvAmt = EqvAmt.toString()
                      .replace(/[^\d.]/g, "")
                      .replace(/^(\d*\.)(.*)\.(.*)$/, '$1$2$3')
                      .replace(/\.(\d{2})\d+/, '.$1')
                      .replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                $('#EquivAmt').val(EqvAmt);
                $('#Outstanding').val(EqvAmt);
            }

            $('#linkNewRow').click(function () {
                // Validasi apakah ada data yang kosong atau tidak valid
