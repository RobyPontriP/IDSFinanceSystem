            });
            
            sumSubAmount = $('#EquivAmt').val().replace(/,/g, '') - sumSubAmount;
            diff = parseFloat(sumSubAmount).toString()
                      .replace(/[^\d.]/g, "")
                      .replace(/^(\d*\.)(.*)\.(.*)$/, '$1$2$3')
                      .replace(/\.(\d{2})\d+/, '.$1')
                      .replace(/\B(?=(\d{3})+(?!\d))/g, ",");

            if (sumSubAmount < 0) {
                $('#txtDiff').text("-" + diff);
            } else if (sumSubAmount == 'NaN') {
                $('#txtDiff').text(0);
            }
            else {
                $('#txtDiff').text(diff);
            }

        }

